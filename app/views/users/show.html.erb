<% provide(:title, @user.name) %>
<div class="page-header"> 
<h2><%= @user.name %></h2>
</div>
<div class="row">
	<div class="span4">
		<%= image_tag @user.avatar.url(:medium) %>
	</div>
  <div class="span8">
    <% if @user.statuses.any? %>
      <h3>Statuses (<%= @user.statuses.count %>)</h3>
      <ol class="statuses">
        <%= render @user.statuses %>
      </ol>
      <%= will_paginate @statuses %>
    <% end %>
  </div>
</div>