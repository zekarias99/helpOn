<% provide(:title, @user.full_name) %>
<h2>Wel come to my HelpOn page</h2>
<%= image_tag 'help_on_cover.jpg' %>
<div class="row">
	<asside class="span3">
		<section>
			<h1>
				<%= gravatar_for @user  %>
				<%= @user.full_name %>

				<% if @user.charities.any? %>
				<div>Charities (<%= @user.charities.count %>)</div>			

				<% end %>
				<%= will_paginate @charities %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
    </asside>
	<div class="span6">
				<ol class="charities">
					<%= render @charities %>
				</ol>
	</div>

		<div class="span3">
		<%= render 'join_form' if signed_in? %>
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
		<ol class="microposts">
			<%= render @microposts %>
		</ol>
		<% end %>

		<%= will_paginate @microposts %>
	</div>
</div>