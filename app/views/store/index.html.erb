
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="span3">
    <div id="cart">
      store index
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>
    </div>
  </div>

  <did class="span6">
   <%= render @deals %>
  </did>

  <div class="span3">
    <div class="page-header">
    <h3>Raise Details</h3>  
    </div>
    
  	<table class="table table-bordered">
  		<% @cart.line_items.each do |item| %> 
  		<tr>
  			<td><%= item.quantity %>&times;</td>
  			<td><%= item.deal.blurb_title %></td>
  			<td ><%= number_to_currency(item.charity_get) %></td>
  		</tr>
  		<% end %>
  		<tr>
  			
  			<td colspan="2">Raised</td>
  			<td><%= number_to_currency(@cart.charity_get, :precision => 2) %></td>
  		</tr>
  	</table>
      <%= button_to "Choose A Charity", new_order_path, method: :get, 
      class: "btn btn-large" %>
  </div>  
</div>
