<h1>Deals of the Day</h1>

<%= link_to "Add New Deal", new_deal_path  %>

<h1><%= pluralize(@deals.size, 'Deal') %></h1>
<% @deals.each do |deal| %>
  <article>
    <header>
      <h2><%= link_to deal.name, deal %></h2>
    </header>
    <p>
      <%= truncate(deal.blurb, length: 40, separator: '') %>
    </p>
    <table>
      <tr>
        <th>Regular Price</th>
        <td><%= number_to_currency(deal.regular_price) %></td>
      </tr>
      <tr>
        <th>Maximum Discount</th>
        <td><%= number_to_currency(deal.max_discount) %></td>
      </tr>
      <tr>
        <th>Approved</th>
        <td><%= deal.approved %></td>
      </tr>
      <tr>
        <th>Initial Discount</th>
        <td><%= deal.initial_discount %></td>
      </tr>
      <tr>
        <th>Deal Date</th>
        <td><%= deal.deal_date %></td>
      </tr>
      <tr>
        <th>Threshold </th>
        <td><%= deal.max_threshold %></td>
      </tr>
      <tr>
        <th>Deal Blurb Tytle</th>
        <td><%= deal.blurb_title %></td>
      </tr>
      <tr>
        <th>Deal Blurb</th>
        <td><%= deal.blurb %></td>
      </tr>
      <tr>
        <th>Deal Type</th>
        <td><%= deal.deal_type %></td>
      </tr>
      <tr>
        <th>Tipping Point</th>
        <td><%= deal.tipping_point %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= deal.end_date %></td>
      </tr>
      <tr>
        <th>Photo File Name</th>
        <td><%= deal.photo_file_name %></td>
      </tr>
    </table>
  </article>
<% end %>