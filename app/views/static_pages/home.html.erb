<% if signed_in? %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%#= render 'shared/user_avatar' %>
		</section>		
		<section>
			<%= render 'shared/status_form' %>
		</section>
	</aside>
	<div class="span8">
		<h3>Feed</h3>
		<%= render 'shared/feed' %>
	</div>
</div>

<% else %>
<div class="page-header"> 
 <h1>This is HelpOn home page.</h1>
</div>
<div class="center">
	<h1>Welcome to HelpOn</h1>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>


  