<%= simple_form_for(@charity) do |f| %>
    <%= render 'shared/error_messages', object: @charity %>
    <%= f.input :charity_name%>
    <%= f.input :registered_charity_number%>
    <%= f.input :first_name %>
    <%= f.input :last_name %>    
    <%= f.input :job_title %>    
    <%= f.input :email_address %>   
    <%= f.input :address_1 %> 
    <%= f.input :address_2 %> 
    <%= f.input :state %> 
    <%= f.input :zip %> 

    <%= f.label :country %>
    <%= f.text_field :country %> 

    <%= f.input :telephone_number %> 
    <%= f.input :website %> 
    <%= f.input :city_id %> 
   <p> <%= f.input :pick_a_category %></p>
    <p> <%= f.select :pick_a_category, Charity::PICK_A_CATEGORY_OPTIONS, prompt: "Pick one" %></p>
   <p> <%= f.text_area :description %> </p>
  <p> <%= f.check_box :i_agree_to_the %> </p>
   <%= f.button :submit %> 
<% end %>