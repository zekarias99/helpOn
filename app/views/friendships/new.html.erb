<% if @friend %>
  <h1><%= @friend.full_name %></h1>

  <p>Do you really want to friend <%= @friend.name %>?</p>

  <%= form_for @friendship, method: :post do |form| %>
    <div class="form form-actions">
      <%= form.hidden_field :friend_id, value: @friend.id %>
      <%= submit_tag "Yes, Add Friend", class: 'btn btn-primary' %>
      <%= link_to "Cancel", current_user , class: 'btn' %>
    </div>
  <% end %>
<% end %>