<%= simple_form_for(@charity) do |f| %>
    <%= render "shared/errors_charity" %>
    <%= f.input :charity_name%>
    <%= f.input :registered_charity_number%>
    <%= f.input :first_name %>
    <%= f.input :last_name %>    
    <%= f.input :job_title %>    
    <%= f.input :email_address %>   
    <%= f.input :address_1 %> 
    <%= f.input :address_2 %> 
    <%= f.input :state %> 
    <%= f.input :zip %> 

    <%= f.label :country %>
    <%= f.text_field :country %> 

    <%= f.input :telephone_number %> 
    <%= f.input :website %> 
    <%= f.input :city_id %> 
    <%= f.input :pick_a_category %>    <%= f.select :pick_a_category, Charity::PICK_A_CATEGORY_OPTIONS, prompt: "Pick one" %>
    <%= f.input :description %>    <%= f.text_area :description %>
    <%= f.input :i_agree_to_the %>    <%= f.check_box :i_agree_to_the %>
    <%= f.button :submit %> 
<% end %>