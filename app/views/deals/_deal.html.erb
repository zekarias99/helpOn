
<h3><%= deal.blurb_title %></h3> 


<%= image_tag deal.photo.url %>
<%=truncate(deal.blurb, length: 500, separator: ' ') %>
<h4>Price now :
<%= number_to_currency(deal.current_price, :precision => 2) %></h4>

<table class="table table-bordered">
  <th>Value</th>
  <th>Discount</th>
  <th>Savings</th>
  <tr>
    <td><%= number_to_currency(deal.regular_price, :precision => 2) %></td>          
    <td><%= number_to_percentage(deal.discount_percent, :precision => 2) %></td>
    <td><%= number_to_currency(deal.savings, :precision => 2) %></td>
  </tr>
</table>

<div>
  <%= button_to 'BUY!', line_items_path(deal_id: deal), class: "btn btn-large"%>
  <p><%= deal.order_count %> purchased</p> 
  <p><h5>Your choise of Charity will get </h5><p>
  <p><h5><%= number_to_currency(deal.charity_get, :precision => 2) %></p>       
</div>

<hr>