<article>
  <header>
    <h1><%= @deal.name %></h1>
  </header>
  <p>
      <%= truncate(@deal.blurb, length: 40, separator: '') %>
  </p>
  <h3>Regular Price</h3>
  <p>
    <%= number_to_currency(@deal.regular_price, :precision => 2) %>
  </p>
  <h3>Maximum Discount</h3>
  <p>
    <%= number_to_currency(@deal.max_discount, :precision => 2) %>
  </p>
  <h3>Maximum Threshold</h3>
  <p>
    <%= number_to_currency(@deal.max_threshold, :precision => 2) %>
  </p>
  <h3>Intial Discount</h3>
  <p>
    <%= number_to_currency(@deal.initial_discount, :precision => 2) %>
  </p>
  <h3>Approved</h3>
  <p>
    <%= @deal.approved %>
  </p>
  <h3>Deal Date</h3>
  <p>
    <%= @deal.deal_date %>
  </p>
  <h3>Deal Blurb</h3>
  <p>
    <%= @deal.blurb %>
  </p>
  <h3>Deal Blurb Title</h3>
  <p>
    <%= @deal.blurb_title %>
  </p>
  <h3>Deal Type</h3>
  <p>
    <%= @deal.deal_type %>
  </p>
  <h3>Tipping Point</h3>
  <p>
    <%= @deal.tipping_point %>
  </p>
  <h3>End Date</h3>
  <p>
    <%= @deal.end_date %>
  </p>
  <h3>Photo File Name</h3>
  <p>
    <%= @deal.photo_file_name %>
  </p>
</article>


<table class="deal_details_table">
    <th>Value</th><th>Discount</th><th>Savings</th>
    <tr>
      <td><%= number_to_currency(@deal.regular_price, :precision => 2) %></td>
      <td><%= number_to_percentage(@deal.initial_discount, :precision => 2) %></td>
      <td><%= number_to_currency(@deal.flat_savings, :precision => 2) %></td>
    </tr>
</table>
<br />
<p><b><%= @deal.order_count %> purchased</b></p>
<br />
<div id="ordered_percent"><%= @deal.ordered_percent %></div>
<div id="progressbar"></div>
<p><%= @deal.orders_to_go %> more to go...</p>
<br />


<table class="deal_details_table">
    <th>Value</th><th>Price</th><th>Discount</th><th>Savings</th>
    <tr>
      <td><%= number_to_currency(@deal.regular_price, :precision => 2) %></td>
      <td><%= number_to_currency(@deal.current_price, :precision => 2) %></td>
      <td><%= number_to_percentage(@deal.discount_percent, :precision => 2) %></td>
      <td><%= number_to_currency(@deal.savings, :precision => 2) %></td>
    </tr>
</table>





<%= link_to "List All Deals", root_path %> |

<%= link_to "Edit", edit_deal_path(@deal) %> |

<%= link_to "Delete", deal_path(@deal), method: :delete, 
        data: { confirm: 'Are you sure?'} %> 

<p>


</p>


