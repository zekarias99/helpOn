<%= simple_form_for( @deal, :html => { :multipart => true, :class => "normal_form"} ) do |f| %>
  <%= render "shared/errors_deal" %>        
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :photo, 'Photo' %>
    <%= f.file_field :photo %>
    <%= f.label :blurb_title %>
    <%= f.text_field :blurb_title %>
    <%= f.label :blurb %>
    <%= f.text_area :blurb %> 
    <%= f.label :deal_type %>
    <%= f.text_field :deal_type %>
    <%= f.label :regular_price, :label => 'Price' %>
    <%= f.number_field :regular_price %>
    <%= f.label :initial_discount, :label => 'Discount' %>
    <%= f.number_field :initial_discount %>
    <%= f.label :max_discount, :label => 'Max Discount' %>
    <%= f.number_field :max_discount %>
    <%= f.label :max_threshold, :label => 'Max Threashold' %>
    <%= f.number_field :max_threshold %>
    <%= f.label :tipping_point, :label => 'Tipping Point' %>
    <%= f.number_field :tipping_point %>
    <%= f.label :deal_date  %>
    <%= f.date_select :deal_date %>
    <%= f.label :end_date  %>
    <%= f.date_select :end_date %>
    <%= f.label :city_id  %>
    <%= f.number_field :city_id %> <br/>
    <%= f.submit :Submit %>
<% end %>
  


