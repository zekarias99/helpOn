<%= form_for(@deal) do |f| %>
  <%= render "shared/errors" %>

    <p>
      <%=  f.label :name %> <br/>
      <%=  f.text_field :name, autofocus: true %> <br/>
    </p>
     <p>
      <%=  f.label :blurb_title %> <br/>
      <%=  f.text_field :blurb_title %> <br/>
    </p>
    <p>
      <%=  f.label :blurb %> <br/>
      <%=  f.text_area :blurb, cols:40, row: 10 %> <br/>
    </p>

    <p>
      <%=  f.label :deal_type %> <br/>
      <%=  f.text_field :deal_type %> <br/>
    </p>
    <p>
      <%= f.label :photo_file_name %> <br/>
      <%= f.text_field :photo_file_name, 
                        placeholder: "GIF, JPG, or PNG file name" %><br/>
    </p>


    <p>
      <%=  f.label :regular_price %> <br/>
      <%=  f.number_field :regular_price %> <br/>
    </p>
    <p>
      <%=  f.label :initial_discount %> <br/>
      <%=  f.number_field :initial_discount %> <br/>
    </p>
    <p>
      <%=  f.label :max_discount %> <br/>
      <%=  f.number_field :max_discount %> <br/>
    </p>
    <p>
      <%=  f.label :max_threshold %> <br/>
      <%=  f.number_field :max_threshold %> <br/>
    </p>
    <p>
      <%=  f.label :tipping_point %> <br/>
      <%=  f.number_field :tipping_point %> <br/>
    </p>
    <p>
      <%=  f.label :deal_date %> <br/>
      <%=  f.date_field :deal_date %> <br/>
    </p>
    <p>
      <%=  f.label :end_date %> <br/>
      <%=  f.date_field :end_date %> <br/>
    </p>

    <p>
      <%=  f.check_box :approved %>
      <%=  f.label :approved %> <br/>
    </p>
    <p>
      <%= f.submit %> |
      <%=  link_to "Cancel", root_path %> 
    </p>
<% end %>