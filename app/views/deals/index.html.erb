<% provide(:title, 'Deals') %>
<h1>Deals</h1>

<table id="tablelist">
  <tr>
    <th>Name</th>
    <th>Blurb</th>
    <th>Price</th>
    <th>Discounts</th>
    <th>Threshold</th>
  </tr>
  <% for deal in @deals %>
    <tr>
      <td><%= link_to deal.name, edit_deal_path(deal) %></td>
      <td><%=raw deal.blurb %></td>
      <td><%= number_to_currency(deal.regular_price) %></td>
      <td><%= deal.initial_discount %>
      <% unless deal.max_discount.blank? %>
         <%= deal.max_discount %>
       <% end %></td>
      <td><%= deal.max_threshold %></td>
      <td><%= link_to "Delete", deal, method: :delete, 
        data: { confirm: 'Are you sure?'} %></td>
      <td><%= link_to "Preview", preview_deal_path(deal) %></td>
    </tr>
  <% end %>
</table>

<p class="links"><%= link_to "New Deal", new_deal_path %></p>
